resource_name = "TestPlayer"
script/source = "extends CharacterBody2D

@export var _healthBar: Node
@export var speed = 300.0
@export var jumpVelocity = -400.0
var facing_right := true  # assume starting facing right FOR THE FACING THING IGNORE

func _ready() -> void:
	pass

func _physics_process(delta: float) -> void:
	# Add the gravity.
	if not is_on_floor():
		velocity += get_gravity() * delta

	# Handle jump.
	if Input.is_action_just_pressed(\"ui_up\") and is_on_floor():
		velocity.y = jumpVelocity

	# Get the input direction and handle the movement/deceleration.
	# As good practice, you should replace UI actions with custom gameplay actions.
	var direction := Input.get_axis(\"ui_left\", \"ui_right\")
	if direction:
		velocity.x = direction * speed
	else:
		velocity.x = move_toward(velocity.x, 0, speed)
	
	move_and_slide()
	
	#flipping the character when moving one way
	if Input.is_action_pressed(\"ui_right\"):
		$Sprite2D.flip_h = false #flips the baby
		facing_right=true
	elif Input.is_action_pressed(\"ui_left\"):
		$Sprite2D.flip_h = true #flips the baby
		facing_right = false

func takeDamage(damage: float) -> void:
	print(\"Damage is %s\", damage)

func weaponArm() -> void: #arm (short range, fastest)
	speed = 500.0
	$Hitbox.damage = 50
	#print(\"Arm Weapon Enabled\")
	
func weaponSword() -> void: #sword (short-mid range, slow speed)
	speed = 150.0
	$Hitbox.damage = 50
	#print(\"Sword Weapon Enabled\")
	
func weaponPicoGun() -> void: #gun (long range, medium speed)
	speed = 300.0
	$Hitbox.damage = 50
	#print(\"PicoGun Weapon Enabled\")
"

