script/source = "extends Area2D
var _overlapping 
var _canAttack = true
@export var attackCooldown = 1
@export var damage = 10

# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	monitorable = false
	#pass # Replace with function body.


# Called every frame. 'delta' is the elapsed time since the previous 	 frame.
func _physics_process(_delta: float) -> void:
	attack()

func attack() -> void:
	if Input.is_action_just_pressed(\"ui_accept\") and _canAttack:
		_canAttack = false
		
		_overlapping = get_overlapping_bodies()
		for body in _overlapping:
			#print(body)
			get_parent().weaponArm()
			if body.is_in_group(\"EnemyHurtBox\"):
				#print(body)
				body.takeDamage(damage)
				#get_parent().weapon1() #testing
			
		get_tree().create_timer(attackCooldown).timeout.connect(func(): _canAttack = true)
"

